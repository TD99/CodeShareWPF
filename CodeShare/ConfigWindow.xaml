<Window x:Class="CodeShare.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeShare"
        mc:Ignorable="d"
        Title="ConfigWindow"
        WindowStartupLocation="CenterScreen"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="ToolbarSummonBtn"
                VerticalAlignment="Top"
                Content="Summon Toolbar Window"
                Click="ToolbarSummonBtn_Click" />
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal">
            <Label>RelPosToolbar: </Label>
            <Label x:Name="DebugPos" />
        </StackPanel>
        <Frame Source="MVVM/View/SettingsPage.xaml"
               Grid.Row="1"/>
        <Frame Source="MVVM/View/CodePage.xaml"
               Grid.Row="2"/>
    </Grid>
</Window>
